{
  "manifest_version": 2,
  "name": "拾贝 beyhub.com",
  "version": "1.0.6",
  "description": "做信息洪流中的一杆旗帜",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [
    "images/icon128.png"
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png"
    },
    "default_title": "beyhub.com",
    "default_popup": "popup.html"
  },
  "chrome_url_overrides": {
    "newtab": "homePage.html"
  },
  "omnibox": {
    "keyword": "b"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "storage",
    "cookies",
    "bookmarks",
    "notifications",
    "webRequest",
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*",
    "https://beyhub.com/"
  ],
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_globs": [
        "chrome://*"
      ],
      "js": [
        "libs/axios.min.js",
        "libs/beyutil.js",
        "content.js"
      ],
      "css": [
        "libs/content.css"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
